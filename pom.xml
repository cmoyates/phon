<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <groupId>ca.phon</groupId>
  <artifactId>phon</artifactId>
  <version>1.7.0</version>
  <packaging>pom</packaging>

  <name>Phon</name>
  <url>https://www.phon.ca</url>
  <description>Phon is a software program that greatly facilitates a number of tasks related
    to the analysis of phonological data. Built to support research in phonological development
    (including babbling), second language acquisition, and phonological disorders, Phon can 
    also be used to investigate virtually all types of phonological investigations (e.g. 
    loanword phonology, fieldwork in phonology).</description>

  <developers>
    <developer>
      <id>ghedlund</id>
      <name>Greg Hedlund</name>
      <email>greg.hedlund@gmail.com</email>
      <timezone>-3.5</timezone>
    </developer>
    <developer>
      <id>yrose</id>
      <name>Yvan Rose</name>
      <email>yrose@mun.ca</email>
      <timezone>-3.5</timezone>
    </developer>
  </developers>
  
  <contributors>
  </contributors>

  <licenses>
    <license>
      <name>GNU GPL v3.0+</name>
      <distribution>repo</distribution>
      <url>http://www.gnu.org/copyleft/gpl.html</url>
    </license>
  </licenses>

  <distributionManagement>
    <repository>
      <id>phon.ling.mun.ca-release</id>
      <name>Phon Release</name>
      <url>https://www.phon.ca/artifacts/libs-release-local</url>
    </repository>
    <snapshotRepository>
      <id>phon.ling.mun.ca-snapshot</id>
      <name>Phon Snapshot</name>
      <url>https://www.phon.ca/artifacts/libs-snapshot-local</url>
    </snapshotRepository>
  </distributionManagement>

  <repositories>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>libs-release</name>
      <url>https://www.phon.ca/artifacts/libs-release</url>
    </repository>
    <repository>
      <snapshots/>
      <id>snapshots</id>
      <name>libs-snapshot</name>
      <url>https://www.phon.ca/artifacts/libs-snapshot</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>plugins-release</name>
      <url>https://www.phon.ca/artifacts/plugins-release</url>
    </pluginRepository>
    <pluginRepository>
      <snapshots/>
      <id>snapshots</id>
      <name>plugins-snapshot</name>
      <url>https://www.phon.ca/artifacts/plugins-snapshot</url>
    </pluginRepository>
  </pluginRepositories>

  <modules>
    <module>util</module>
    <module>xml</module>
    <module>design-patterns</module>
    <module>ipa</module>
    <module>ipa-alignment</module>
    <module>ipa-xml</module>
    <module>ipadictionary</module>
    <module>ipamap</module>
    <module>components</module>
	<module>opgraph</module>
	<module>orthography</module>
    <module>syllabifier</module>
	<module>syllabifier-opgraph</module>
    <module>syllabifier-editor</module>
    <module>alignment</module>
    <module>session</module>
    <module>project</module>
	<module>script</module>
	<module>media</module>
	<module>query</module>
	<module>app</module>
    <module>workspace</module>
  </modules>
  
  <dependencyManagement>
    <dependencies>
      
      <dependency>
        <groupId>org.swinglabs</groupId>
        <artifactId>swingx</artifactId>
        <version>1.6.1</version>
      </dependency>
      
      <dependency>
        <groupId>org.apache.commons</groupId>
