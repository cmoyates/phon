      </dependency>
      
      <dependency>
        <groupId>org.mozilla</groupId>
        <artifactId>rhino</artifactId>
        <version>1.7R4</version>
      </dependency>
     
      <dependency>
        <groupId>de.susebox</groupId>
        <artifactId>jtopas</artifactId>
        <version>0.8</version>
      </dependency>
      
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.8.2</version>
