<SyllabifierDef xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Polish" language="pol">
    <SonorityScale>
        <!-- Plosive,Fricative,Affricate - 0 -->
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Obstruent}</PhoneSequence>
            </Constraint>
            <sonorityValue>0</sonorityValue>
        </SonorityClass>
        
        <!-- Nasal - 1 -->
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Nasal}</PhoneSequence>
            </Constraint>
            <sonorityValue>1</sonorityValue>
        </SonorityClass>
        
        <!-- Liquid - 2 -->
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Liquid}</PhoneSequence>
            </Constraint>
            <sonorityValue>2</sonorityValue>
        </SonorityClass>
        
        <!-- Glide - 3 -->
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Glide}</PhoneSequence>
            </Constraint>
            <sonorityValue>3</sonorityValue>
        </SonorityClass>
        
        <!-- Vowel - 4 -->
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Vowel}</PhoneSequence>
            </Constraint>
            <sonorityValue>4</sonorityValue>
        </SonorityClass>
        
    </SonorityScale>
    
    <Stage name="MarkNuclei" useMDC="false">
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Vowel}</PhoneSequence>
            </Constraint>
            <MarkAs>Nucleus</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    <Stage name="MarkOnset" useMDC="false">
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:Unknown|-SyllableStressMarker|-SyllableBoundaryMarker</PhoneSequence>
            </Constraint>
            <MarkAs>Onset</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{}:Nucleus</PhoneSequence>
            </Constraint>
        </NextPhone>
    </Stage>
    
    <Stage name="MaxOnset1" useMDC="true" mdc="2" sonorityDirection="Right" allowsFlatSonority="false">
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:Unknown|-SyllableStressMarker|-SyllableBoundaryMarker</PhoneSequence>
            </Constraint>
            <MarkAs>Onset</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{}:Onset</PhoneSequence>
            </Constraint>
        </NextPhone>
    </Stage>
    
    <Stage name="MaxOnset(Sibilant)" useMDC="false">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{-Glide}</PhoneSequence>
                <connector type="and"/>
                <PhoneSequence>{-Vowel}</PhoneSequence>
            </Constraint>
        </PrevPhone>
                
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Coronal, Fricative, Anterior}</PhoneSequence>
            </Constraint>
            <MarkAs>Onset</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{-Continuant}:Onset</PhoneSequence>
            </Constraint>
        </NextPhone>
        
    </Stage>
    
    <Stage name="MarkCoda" useMDC="false">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:Nucleus</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:Unknown|-SyllableStressMarker|-SyllableBoundaryMarker</PhoneSequence>
            </Constraint>
            <MarkAs>Coda</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    <Stage name="MaxCoda1" useMDC="false" mdc="1" sonorityDirection="Left" allowsFlatSonority="true">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:Coda</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:Unknown|-SyllableStressMarker|-SyllableBoundaryMarker</PhoneSequence>
            </Constraint>
            <MarkAs>Coda</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    <Stage name="MaxOnset2" useMDC="false" mdc="1" sonorityDirection="Right" allowsFlatSonority="false">
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:Unknown|-SyllableStressMarker|-SyllableBoundaryMarker</PhoneSequence>
            </Constraint>
            <MarkAs>Onset</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{}:Onset</PhoneSequence>
            </Constraint>
        </NextPhone>
    </Stage>
    
    <Stage name="MaxCoda2" useMDC="false" mdc="1" sonorityDirection="Left" allowsFlatSonority="false">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:Coda</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:Unknown|-SyllableStressMarker|-SyllableBoundaryMarker</PhoneSequence>
            </Constraint>
            <MarkAs>Coda</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    <Stage name="MaxOnset2" useMDC="false" continueUntilFail="true">
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Consonant}:Unknown</PhoneSequence>
            </Constraint>
            <MarkAs>Onset</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{}:Onset</PhoneSequence>
            </Constraint>
        </NextPhone>
        
    </Stage>
    
    <Stage name="MarkCoda2" useMDC="false" continueUntilFail="true">
        
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:Coda</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Consonant}:Unknown</PhoneSequence>
            </Constraint>
            <MarkAs>Coda</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
</SyllabifierDef>
