<SyllabifierDef xmlns="https://www.phon.ca/ns/syllabifier" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://www.phon.ca/ns/syllabifier ../../xml/xsd/syllabifier.xsd"
    name="English" language="eng">
    <SonorityScale>
        <!-- Plosive,Fricative,Affricate - 0 -->
        <SonorityClass>
            <exprs>
                <phonex>[{affricate}{stop,-nasal}{fricative}]</phonex>
            </exprs>
            <sonorityValue>0</sonorityValue>
        </SonorityClass>
        
        <!-- Nasal - 1 -->
        <SonorityClass>
            <exprs>
                <phonex>{nasal}</phonex>
            </exprs>
            <sonorityValue>1</sonorityValue>
        </SonorityClass>
        
        <!-- Liquid - 2 -->
        <SonorityClass>
            <exprs>
                <phonex>{liquid}</phonex>
            </exprs>
            <sonorityValue>2</sonorityValue>
        </SonorityClass>
        
        <!-- Glide - 3 -->
        <SonorityClass>
            <exprs>
                <phonex>{g}</phonex>
            </exprs>
            <sonorityValue>3</sonorityValue>
        </SonorityClass>
        
        <!-- Vowel - 4 -->
        <SonorityClass>
            <exprs>
                <phonex>{v}</phonex>
            </exprs>
            <sonorityValue>4</sonorityValue>
        </SonorityClass>
        
    </SonorityScale>
    
    <Stage name="MarkNuclei" useMDC="false">
        <exprs>
            <phonex>(N=j{v})</phonex>
            <phonex>(N={v,-long}[É™{g,-stop,-fri,-affricate,-liquid}{v,high,lax}])</phonex>
            <phonex>(N={v})</phonex>
            <phonex>(N='.*[\u0329].*')</phonex>
        </exprs>
        <map>
            <set group="N" mark="Nucleus"/>
        </map>
    </Stage>
    
    <Stage name="MarkOnset" useMDC="false">
        <exprs>
            <phonex>(O={-v}:sctype("Unknown|-SyllableStressMarker|-SyllableBoundaryMarker")).:N</phonex>
        </exprs>
        <map>
            <set group="O" mark="Onset"/>
        </map>
    </Stage>
    
    <!-- Glides which should be onsets -->
    <Stage name="MarkOnset 2">
        <exprs>
            <phonex>.:N(G={g}:N).:N</phonex>
        </exprs>
        <map>
            <set group="G" mark="Onset"/>
        </map>
    </Stage>
    
    <Stage name="MaxOnset" useMDC="true" mdc="2" sonorityDirection="Right" allowsFlatSonority="false">
        <exprs>
            <phonex>(O={-v,-strident}:sctype("Unknown|-SyllableStressMarker|-SyllableBoundaryMarker"))</phonex>
            <phonex>(O={strident, -anterior}:U</phonex>
        </exprs>
        <map>
            <set group="O" mark="Onset"/>
        </map>
    </Stage>
    
    <Stage name="Fix Diphthongs" useMDC="false">
        <exprs>
            <phonex>.:-O?(G={g}:N).:N</phonex>
        </exprs>
        <map>
            <set group="G" mark="Onset"/>
        </map>
    </Stage>
    
    <Stage name="Glide Initial [j]" useMDC="false">
        <exprs>
            <phonex>#(O=j:N)</phonex>
        </exprs>
        <map>
            <set group="O" mark="Onset"/>
        </map>
    </Stage>
    
    <Stage name="MarkCoda" useMDC="false">
        <exprs>
            <phonex>.:N(C={-v}:sctype("Unknown|-SyllableStressMarker|-SyllableBoundaryMarker"))</phonex>
        </exprs>
        <map>
            <set group="C" mark="Coda"/>
        </map>
    </Stage>
    
    <Stage name="MaxCoda" useMDC="true" mdc="1" sonorityDirection="Left" allowsFlatSonority="false">
        <exprs>
            <phonex>.:C(C={-v}:sctype("Unknown|-SyllableStressMarker|-SyllableBoundaryMarker"))</phonex>
        </exprs>
        <map>
            <set group="C" mark="Coda"/>
        </map>
    </Stage>
    
    <Stage name="Fix Branching Codas" useMDC="false">
        <exprs>
            <phonex>.:N(C={obs,-cor}:U)</phonex>
        </exprs>
        <map>
            <set group="C" mark="Coda"/>
        </map>
    </Stage>
    
    <Stage name="MarkLA1" useMDC="false">
        <exprs>
            <phonex>#(LA={anterior,strident,voiceless})</phonex>
        </exprs>
        <map>
            <set group="LA" mark="Left Appendix"/>
        </map>
    </Stage>
    
    <Stage name="MarkLA2" useMDC="false">
        <exprs>
            <phonex>.:sctype("Coda|SyllableStressMarker|SyllableBoundaryMarker|Nucleus")(LA={anterior,strident,voiceless}).:O</phonex>
        </exprs>
        <map>
            <set group="LA" mark="Left Appendix"/>
        </map>
    </Stage>
    
    <Stage name="MarkRA" useMDC="false">
        <exprs>
            <phonex>.:C(RA={cor}:U)</phonex>
        </exprs>
        <map>
            <set group="RA" mark="Right Appendix"/>
        </map>
    </Stage>
    
    <Stage name="MaxRA" useMDC="false" continueUntilFail="true">
        <exprs>
            <phonex>.:R(RA={c}:U)</phonex>
        </exprs>
        <map>
            <set group="RA" mark="Right Appendix"/>
        </map>
    </Stage>
    
    <Stage name="MarkOEHS" useMDC="false">
        <exprs>
            <phonex>(O={-v}:sctype("Unknown|-SyllableStressMarker|-SyllableBoundaryMarker"))</phonex>
        </exprs>
        <map>
            <set group="O" mark="OEHS"/>
        </map>
    </Stage>
    
</SyllabifierDef>
