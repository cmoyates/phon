<SyllabifierDef xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    name="English" language="eng">
    <SonorityScale>
        <!-- Plosive,Fricative,Affricate - 0 -->
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Affricate}</PhoneSequence>
                <connector type="or"/>
                <PhoneSequence>{Stop,-Nasal}</PhoneSequence>
                <connector type="or"/>
                <PhoneSequence>{Fricative}</PhoneSequence>
            </Constraint>
            <sonorityValue>0</sonorityValue>
        </SonorityClass>
        
        <!-- Nasal - 1 -->
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Nasal}</PhoneSequence>
            </Constraint>
            <sonorityValue>1</sonorityValue>
        </SonorityClass>
        
        <!-- Liquid - 2 -->
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Liquid}</PhoneSequence>
            </Constraint>
            <sonorityValue>2</sonorityValue>
        </SonorityClass>
        
        <!-- Glide - 3 -->
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Glide}</PhoneSequence>
            </Constraint>
            <sonorityValue>3</sonorityValue>
        </SonorityClass>
        
        <!-- Vowel - 4 -->
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Vowel}</PhoneSequence>
            </Constraint>
            <sonorityValue>4</sonorityValue>
        </SonorityClass>
        
    </SonorityScale>
    
    <Stage name="MarkNuclei" useMDC="false">
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>j{Vowel}</PhoneSequence>
                <connector type="or"/>
                <PhoneSequence>{Vowel,-Long}É™</PhoneSequence>
                <connector type="or"/>
                <PhoneSequence>{Vowel,-Long}{Glide,-Stop,-Fricative,-Affricate,-Liquid}</PhoneSequence>
                <connector type="or"/>
                <PhoneSequence>{Vowel,-Long}{Vowel,High,Lax}</PhoneSequence>
                <connector type="or"/>
                <PhoneSequence>{Vowel}</PhoneSequence>
                <connector type="or"/>
                <PhoneSequence>'.*[\u0329].*'</PhoneSequence>
            </Constraint>
            <MarkAs>Nucleus</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    <Stage name="MarkOnset" useMDC="false">
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:Unknown|-SyllableStressMarker|-SyllableBoundaryMarker</PhoneSequence>
            </Constraint>
            <MarkAs>Onset</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{}:Nucleus</PhoneSequence>
            </Constraint>
        </NextPhone>
    </Stage>
    
    <!-- Glides which should be onsets -->
    <Stage name="MarkOnset 2">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:Nucleus</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Glide}:Nucleus</PhoneSequence>
            </Constraint>
            <MarkAs>Onset</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{}:Nucleus</PhoneSequence>
            </Constraint>
        </NextPhone>
    </Stage>
    
    <Stage name="MaxOnset" useMDC="true" mdc="2" sonorityDirection="Right" allowsFlatSonority="false">
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:Unknown|-SyllableStressMarker|-SyllableBoundaryMarker</PhoneSequence>
            </Constraint>
            <MarkAs>Onset</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{}:Onset</PhoneSequence>
            </Constraint>
        </NextPhone>
    </Stage>
    
    <Stage name="Fix Diphthongs" useMDC="false">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:-Onset?</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Glide}:Nucleus</PhoneSequence>
            </Constraint>
            <MarkAs>Onset</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{}:Nucleus</PhoneSequence>
            </Constraint>
        </NextPhone>
    </Stage>
    
    <Stage name="Glide Initial [j]" useMDC="false">
    	<PhoneOfInterest>
    		<Constraint>
    			<PhoneSequence>$j:Nucleus</PhoneSequence>
    		</Constraint>
    		<MarkAs>Onset</MarkAs>
    	</PhoneOfInterest>
    </Stage>
    
    <Stage name="MarkCoda" useMDC="false">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:Nucleus</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:Unknown|-SyllableStressMarker|-SyllableBoundaryMarker</PhoneSequence>
            </Constraint>
            <MarkAs>Coda</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    <Stage name="MaxCoda" useMDC="true" mdc="1" sonorityDirection="Left" allowsFlatSonority="false">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:Coda</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:Unknown|-SyllableStressMarker|-SyllableBoundaryMarker</PhoneSequence>
            </Constraint>
            <MarkAs>Coda</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    <Stage name="Fix Branching Codas" useMDC="false">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:Coda</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Obstruent,-Coronal}:Unknown</PhoneSequence>
            </Constraint>
            <MarkAs>Coda</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    <Stage name="MarkLA1" useMDC="false">
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>${Strident,Voiceless}</PhoneSequence>
            </Constraint>
            <MarkAs>Left Appendix</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{}:Onset</PhoneSequence>
            </Constraint>
        </NextPhone>
        
    </Stage>
    
    <Stage name="MarkLA2" useMDC="false">
        
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:Coda</PhoneSequence>
                <connector type="or"/>
                <PhoneSequence>{}:SyllableStressMarker|SyllableBoundaryMarker</PhoneSequence>
                <connector type="or"/>
                <PhoneSequence>{}:Nucleus</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Strident,Voiceless}</PhoneSequence>
            </Constraint>
            <MarkAs>Left Appendix</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{}:Onset</PhoneSequence>
            </Constraint>
        </NextPhone>
    </Stage>
    
    <Stage name="MarkRA" useMDC="false">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:Coda</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Coronal}:Unknown</PhoneSequence>
            </Constraint>
            <MarkAs>Right Appendix</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    <Stage name="MaxRA" useMDC="false" continueUntilFail="true">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:RightAppendix</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Coronal}:Unknown</PhoneSequence>
            </Constraint>
            <MarkAs>Right Appendix</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    <Stage name="MarkOEHS" useMDC="false">
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:Unknown|-SyllableStressMarker|-SyllableBoundaryMarker</PhoneSequence>
            </Constraint>
            <MarkAs>OEHS</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
</SyllabifierDef>
