<SyllabifierDef xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Catalan (simple)" language="cat-simple">
    <SonorityScale>
        
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Obstruent}</PhoneSequence>
            </Constraint>
            <sonorityValue>0</sonorityValue>
        </SonorityClass>
        
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Nasal,Consonant}</PhoneSequence>
            </Constraint>
            <sonorityValue>1</sonorityValue>
        </SonorityClass>
        
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Liquid}</PhoneSequence>
            </Constraint>
            <sonorityValue>2</sonorityValue>
        </SonorityClass>
        
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Glide}</PhoneSequence>
            </Constraint>
            <sonorityValue>3</sonorityValue>
        </SonorityClass>
        
        <SonorityClass>
            <Constraint>
                <PhoneSequence>{Vowel}</PhoneSequence>
            </Constraint>
            <sonorityValue>4</sonorityValue>
        </SonorityClass>
        
    </SonorityScale>
    
    <Stage name="MarkNuclei" useMDC="false">
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Glide}{Vowel}</PhoneSequence>
                <connector type="or"/>
                <PhoneSequence>{Vowel}</PhoneSequence>
                <connector type="or"/>
                <PhoneSequence>{Vowel}{Vowel,High,Lax}</PhoneSequence>
                <connector type="or"/>
                <PhoneSequence>{Vowel}{Glide,-Stop,-Fricative,-Affricate,-Liquid}</PhoneSequence>
                <connector type="or"/>
                <PhoneSequence>{Vowel,High,Lax}{Vowel}</PhoneSequence>
            </Constraint>
            <MarkAs>Nucleus</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    <Stage name="MarkOnset" useMDC="false">
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:sctype("Unknown|-SyllableStressMarker|-SyllableBoundaryMarker")</PhoneSequence>
            </Constraint>
            <MarkAs>Onset</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{}:Nucleus</PhoneSequence>
            </Constraint>
        </NextPhone>
    </Stage>
    
    <!-- Glides which should be onsets -->
    <Stage name="MarkOnset 2">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:Nucleus</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Glide}:Nucleus</PhoneSequence>
            </Constraint>
            <MarkAs>Onset</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{}:Nucleus</PhoneSequence>
            </Constraint>
        </NextPhone>
    </Stage>
    
    <Stage name="MaxOnset" useMDC="true" mdc="2" sonorityDirection="Right" allowsFlatSonority="false">
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:sctype("Unknown|-SyllableStressMarker|-SyllableBoundaryMarker")</PhoneSequence>
            </Constraint>
            <MarkAs>Onset</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{}:Onset</PhoneSequence>
            </Constraint>
        </NextPhone>
    </Stage>
    
    <Stage name="Fix Diphthongs" useMDC="false">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:-Onset?</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Glide}:Nucleus</PhoneSequence>
            </Constraint>
            <MarkAs>Onset</MarkAs>
        </PhoneOfInterest>
        
        <NextPhone>
            <Constraint>
                <PhoneSequence>{}:Nucleus</PhoneSequence>
            </Constraint>
        </NextPhone>
    </Stage>
    
    <Stage name="MarkCoda" useMDC="false">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:Nucleus</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:sctype("Unknown|-SyllableStressMarker|-SyllableBoundaryMarker")</PhoneSequence>
            </Constraint>
            <MarkAs>Coda</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    <Stage name="MaxCoda" useMDC="false">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:Coda</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{-Vowel}:sctype("Unknown|-SyllableStressMarker|-SyllableBoundaryMarker")</PhoneSequence>
            </Constraint>
            <MarkAs>Coda</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    <Stage name="MarkRA" useMDC="false">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:Coda</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Coronal}:Unknown</PhoneSequence>
            </Constraint>
            <MarkAs>Right Appendix</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    
    <Stage name="MaxRA" useMDC="false" continueUntilFail="true">
        <PrevPhone>
            <Constraint>
                <PhoneSequence>{}:RightAppendix</PhoneSequence>
            </Constraint>
        </PrevPhone>
        
        
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{Coronal}:Unknown</PhoneSequence>
            </Constraint>
            <MarkAs>Right Appendix</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
    <Stage name="Fix RA" useMDC="false">
        <PhoneOfInterest>
            <Constraint>
                <PhoneSequence>{}:RightAppendix</PhoneSequence>
            </Constraint>
            <MarkAs>Coda</MarkAs>
        </PhoneOfInterest>
    </Stage>
    
</SyllabifierDef>
