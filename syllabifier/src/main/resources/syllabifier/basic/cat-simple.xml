<SyllabifierDef xmlns="https://www.phon.ca/ns/syllabifier" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://www.phon.ca/ns/syllabifier ../../xml/xsd/syllabifier.xsd"
    name="Catalan (simple)" language="cat-simple">
    <SonorityScale>
        
        <SonorityClass>
            <exprs>
                <phonex>{obs}</phonex>
            </exprs>
            <sonorityValue>0</sonorityValue>
        </SonorityClass>
        
        <SonorityClass>
            <exprs>
                <phonex>{c,nasal}</phonex>
            </exprs>
            <sonorityValue>1</sonorityValue>
        </SonorityClass>
        
        <SonorityClass>
            <exprs>
                <phonex>{liquid}</phonex>
            </exprs>
            <sonorityValue>2</sonorityValue>
        </SonorityClass>
        
        <SonorityClass>
            <exprs>
                <phonex>\g</phonex>
            </exprs>
            <sonorityValue>3</sonorityValue>
        </SonorityClass>
        
        <SonorityClass>
            <exprs>
                <phonex>\v</phonex>
            </exprs>
            <sonorityValue>4</sonorityValue>
        </SonorityClass>
        
    </SonorityScale>
    
    <Stage name="MarkNuclei">
        <exprs>
            <phonex>(D=\g\v)</phonex>
            <phonex>(D=\v[{v,high,lax}{g,-stop,-fricative,-affricate,-liquid}])</phonex>
            <phonex>(D={v, high, lax}\v)</phonex>
            <phonex>(N=\v:U)</phonex>
        </exprs>
        <map>
            <set group="D" mark="Diphthong"/>
            <set group="N" mark="Nucleus"/>
        </map>
    </Stage>
    
    <Stage name="MarkOnset">
        <exprs>
            <phonex>(O=\c:U).:N</phonex>
            <!-- Fix glides which should be onsets -->
            <phonex>.:N(O=\g:N).:N</phonex>
        </exprs>
        <map>
            <set group="O" mark="Onset"/>
        </map>
    </Stage>
    
    <Stage name="MaxOnset">
        <exprs>
            <phonex>(O=\c:U).:O:mdc("2","false")</phonex>
        </exprs>
        <map>
            <set group="O" mark="Onset"/>
        </map>
    </Stage>
    
    <Stage name="Fix Diphthongs">
        <exprs>
            <phonex>.:-O?(O=\g:N).:N</phonex>
        </exprs>
        <map>
            <set group="O" mark="Onset"/>
        </map>
    </Stage>
    
    <Stage name="MarkCoda">
        <exprs>
            <phonex>.:N(C=\c:U)</phonex>
        </exprs>
        <map>
            <set group="C" mark="Coda"/>
        </map>
    </Stage>
    
    <Stage name="MaxCoda">
        <exprs>
            <phonex>.:C(C=\c:U)</phonex>
        </exprs>
        <map>
            <set group="C" mark="Coda"/>
        </map>
    </Stage>
    
    <!-- In cat-simple, right appendicies are marked as codas -->
    <Stage name="MarkRA">
        <exprs>
            <phonex>.:C(R={cor}:U)</phonex>
        </exprs>
        <map>
            <set group="R" mark="Coda"/>
        </map>
    </Stage>
    
    
    <Stage name="MaxRA">
        <exprs>
            <phonex>.:R(R={cor}:U+)</phonex>
        </exprs>
        <map>
            <set group="R" mark="Coda"/>
        </map>
    </Stage>
    
</SyllabifierDef>
