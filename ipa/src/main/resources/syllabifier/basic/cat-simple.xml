<SyllabifierDef xmlns="https://www.phon.ca/ns/syllabifier"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://www.phon.ca/ns/syllabifier ../../xml/xsd/syllabifier.xsd"
    name="Catalan-simple" language="cat-simple">
    <SonorityScale>

        <SonorityClass>
            <phonex>{obs}</phonex>
            <sonorityValue>0</sonorityValue>
        </SonorityClass>

        <SonorityClass>
            <phonex>{c,nasal}</phonex>
            <sonorityValue>1</sonorityValue>
        </SonorityClass>

        <SonorityClass>
            <phonex>{liquid}</phonex>
            <sonorityValue>2</sonorityValue>
        </SonorityClass>

        <SonorityClass>
            <phonex>\g</phonex>
            <sonorityValue>3</sonorityValue>
        </SonorityClass>

        <SonorityClass>
            <phonex>\v</phonex>
            <sonorityValue>4</sonorityValue>
        </SonorityClass>

    </SonorityScale>

    <Stage name="MarkNuclei">
        <phonex>(D=\g\v)</phonex>
        <phonex>(D=\v[{v,high,lax}{g,-stop,-fricative,-affricate,-liquid}])</phonex>
        <phonex>(D={v, high, lax}\v)</phonex>
        <phonex>(N=\v:U)</phonex>

        <group name="D" mark="Diphthong"/>
        <group name="N" mark="Nucleus"/>
    </Stage>

    <Stage name="MarkOnset">
        <phonex>(O=\c:U).:N</phonex>
        <!-- Fix glides which should be onsets -->
        <phonex>.:N(O=\g:N).:N</phonex>

        <group name="O" mark="Onset"/>
    </Stage>

    <Stage name="MaxOnset">
        <phonex>(O=\c:U).:O:mdc("2","false")</phonex>
        <group name="O" mark="Onset"/>
    </Stage>

    <Stage name="Fix Diphthongs">
        <phonex>.:-O?(O=\g:N).:N</phonex>

        <group name="O" mark="Onset"/>
    </Stage>

    <Stage name="MarkCoda">
        <phonex>.:N(C=\c:U)</phonex>

        <group name="C" mark="Coda"/>
    </Stage>

    <Stage name="MaxCoda">
        <phonex>.:C(C=\c:U)</phonex>

        <group name="C" mark="Coda"/>
    </Stage>

    <Stage name="MarkRA">
        <phonex>.:C(R={cor}:U)</phonex>

        <group name="R" mark="Right Appendix"/>
    </Stage>

    <Stage name="MaxRA">
        <phonex>.:R(R={cor}:U+)</phonex>

        <group name="R" mark="Coda"/>
    </Stage>

    <Stage name="Make Simple">
        <phonex>(R=.:R+)</phonex>

        <group name="R" mark="Coda"/>
    </Stage>

</SyllabifierDef>
